@model IEnumerable<Movie.Models.MovieModel>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
<p>
    @Html.ActionLink("New Movie", "New", null, new { @class = "btn btn-primary btn-lg" })
</p>
@if (!Model.Any())
{
    <p>There are no customers registered.</p>
}
else
{
    <table class="table table-bordered	table-hover">
        <thead>
            <tr>
                <th>
                    Movie
                </th>
                <th>
                    Genre
                </th>
            </tr>
        </thead>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new {Id = movie.Id}, null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    </table>
}